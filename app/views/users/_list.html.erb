<div class='col-xs-3'>
    <h2>User info</h2>
    <table class='table'>
      <tr><%= attachment_image_tag user, :profile_image, size: "100x100", class: "pull-left profile-img", fallback: "no-image.jpg" %></tr> 
      <tr>
    	  <th>name</th>
    	  <th><%= user.name %></th>
      </tr>
      <tr>
    	  <th>introduction</th>
    	  <th><%= user.introduction %></th>
      </tr>
    </table>
    
  <div class='row'>
    <%= link_to "", edit_user_path(user), class: "pull-right col-xs-11 btn btn-default glyphicon glyphicon-wrench" %>
  </div>
  
  <h2>New book</h2>
  <%= form_with url:books_path, model:book, local:true do |f| %>

   <% if book.errors.any? %>
    <div class="miss">
      <p><%= book.errors.count %>error prohibited this book from being saved:</p>
      <ul>
        <% book.errors.full_messages.each do |message| %>
            <li><%= message %></li>
        <% end %>
      </ul>
    </div>
   <% end %>

   <label>Title</label>
   <div class="form "><%= f.text_field :title, class: "col-xs-12" %></div>

   <label>Opinion</label>
   <div class="form "><%= f.text_area :body, class: "col-xs-12" %></div>

   <div class="form submit"><%= f.submit 'Create Book', class: "btn btn-primary col-xs-12" %></div>

  <% end %>
</div>