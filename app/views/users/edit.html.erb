<h2>User info</h2>

<div class="form-body">
    <%= form_with model:@user, local:true do |f| %>
      
      <% if @user.errors.any? %>
       <div class="miss">
        <p><%= @user.errors.count %>error prohibited this useer from being saved:</p>
        <ul>
          <% @user.errors.full_messages.each do |message| %>
           <li><%= message %></li>
          <% end %>
        </ul>
       </div>
      <% end %>
      
      <div class="form-group has-icon">
        <label for="inputEmail">Name</label>
        <%= f.text_field :name, autofocus: true, id:"inputEmail", placeholder:"名前"%>
        <span class="fa fa-user form-control-icon" aria-hidden="true"></span>
      </div>
      <div class="form-group has-icon">
        <label for="inputEmail">Image</label>
        <%= f.attachment_field :profile_image, placeholder: "プロフィール画像", class: "user-edit-form" %>
      </div>
      <div class="form-group has-icon">
        <label for="inputEmail">Introduction</label>
        <%= f.text_area :introduction, autofocus: true, id:"inputEmail", placeholder:""%>
      </div>
      <%= f.submit "Update User" %>
    <% end %>
</div>