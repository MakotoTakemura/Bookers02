<div class="success"><%= flash[:notice] %></div>

<%= render 'users/list', book: @book_list ,user: @user_list %>

<div class='col-xs-9'>
	<h2>Book detail</h2>
	<table class='table'>
	　<tr>
    　　<td class="top">           
    　　  <%= link_to user_path(@user.id) do %>
           <%= attachment_image_tag @book.user, :profile_image, size: "40x40", class: "pull-left profile-img", fallback: "no-image.jpg" %>
           <br><br><p><%= @book.user.name %></p>
          <% end %>
        </td>
        <td><%= link_to @book.title, book_path(@book.id) %></td>
        <td><%= @book.body %></td>
        <% if @book.user_id == current_user.id %>
        <td><%= link_to "Edit", edit_book_path(@book), class: "btn-sm btn-success" %></td>
        <td><%= link_to "Destroy", book_path(@book), class: "btn-sm btn-danger", method: :delete, data: { confirm: "本当に消しますか？" } %></td>
        <% end %>
      </tr>
    </table>
</div>